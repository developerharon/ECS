@model IEnumerable<ApplicationUser>

<div class="bg-primary m-1 p-1 text-white"><h4>Timestamps</h4></div>

<table class="table table-bordered table-striped">
    <tr><th>Name</th><th>Department</th><th colspan="4">Timestamps</th></tr>
    @if (Model.Count() > 0)
    {
        @foreach(ApplicationUser user in Model)
        {
            @if (user.Timestamps.Count() == 0) continue;
            <tr>
                <td>@user.Name</td>
                <td>@user.Department</td>
            </tr>
            @foreach (var timestamp in user.Timestamps)
            {
                <tr>
                    <td colspan="2"></td>
                    <td>@timestamp.In</td>
                    <td>@timestamp.InWhileOnPremises</td>
                    <td>@timestamp.Out</td>
                    <td>@timestamp.OutWhileOnPremises</td>
                </tr>
            }
        }
    }
    else
    {
        <tr><td colspan="3">No Clocks at the moment.</td></tr>
    }
</table>