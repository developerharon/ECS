@model IEnumerable<Employee>
<div class="bg-primary m-1 p-1 text-white"><h4>All Users</h4></div>

<div class="text-danger" asp-validation-summary="ModelOnly"></div>

<table class="table table-sm table-bordered">
    <tr><th>ID</th><th>Firstname</th><th>Lastname</th><th>Department</th><th>Email</th></tr>
    
    @if (Model.Count() == 0)
    {
        <tr><td colspan="5" class="text-center">No Employees Accounts</td></tr>
    }
    else
    {
        foreach (Employee user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Department</td>
                <td>@user.Email</td>
                <td>
                    <form asp-action="Delete" asp-route-id="@user.Id" method="post">
                        <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@user.Id">Edit</a>
                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    }
</table>

<a class="btn btn-primary" asp-action="Register">Register</a>