@model IEnumerable<Employee>
<div class="bg-primary m-1 p-1 text-white"><h4>All Users</h4></div>

<table class="table table-sm table-bordered">
    <tr><th>ID</th><th>Firstname</th><th>Lastname</th><th>Department</th><th>Email</th></tr>
    
    @if (Model.Count() == 0)
    {
        <tr><td colspan="5" class="text-center">No Employees Accounts</td></tr>
    }
    else
    {
        foreach (Employee user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Department</td>
                <td>@user.Email</td>
            </tr>
        }
    }
</table>

<a class="btn btn-primary" asp-action="Register">Register</a>