@model IEnumerable<ApplicationUser>

<table class="table table-sm table-bordered">
    <tr><th>ID</th><th>Profile Picture</th><th>Username</th><th>Name</th><th>Email</th><th>Actions</th></tr>

    @if (Model.Count() == 0)
    {
        <tr><td colspan="5" class="text-center">No System Administrators</td></tr>
    }
    else
    {
        @foreach (ApplicationUser user in Model)
        {
            <tr>
                <td>@user.Id</td>
                @if (user.ProfilePicture == null)
                {
                    <td class="text-center"><img src="/images/profile-pic.png" alt="" class="rounded-circle" width="40" height="40" /></td>
                }
                else
                {
                    <td class="text-center"><img src="/images/@user.ProfilePicture" alt="" class="rounded-circle" width="40" height="40" /></td>
                }
                <td>@user.UserName</td>
                <td>@user.Name</td>
                <td>@user.Email</td>
                <td>
                    <form asp-action="RemoveAdministrator" asp-route-id="@user.Id" method="post" class="form-inline">
                        <button class="btn btn-sm btn-outline-success" type="submit">Remove Admin</button>
                    </form>
                </td>
            </tr>
        }
    }
</table>