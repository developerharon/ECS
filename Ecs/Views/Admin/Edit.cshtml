@model EditViewModel

<div class="bg-primary m-1 p-1 text-white"><h4>Edit Employee Details</h4></div>

<form asp-action="Edit" asp-controller="Admin" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Id"></label>
        <input asp-for="Id" class="form-control" disabled />
        <div class="text-danger"><span asp-validation-for="Id"></span></div>
    </div>
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <div class="text-danger"><span asp-validation-for="Name"></span></div>
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" type="email" class="form-control" />
        <div class="text-danger"><span asp-validation-for="Email"></span></div>
    </div>
    <div class="form-group">
        <label asp-for="Department"></label>
        <input asp-for="Department" class="form-control" />
        <div class="text-danger"><span asp-validation-for="Department"></span></div>
    </div>
    <div class="form-group">
        <label asp-for="ProfilePicture">Profile Picture</label>
        <input asp-for="ProfilePicture" />
    </div>
    <button type="submit" class="btn btn-outline-primary">Update Profile</button>
    <a asp-action="ListEmployees" class="btn btn-outline-danger">Cancel</a>
</form>